<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" http-equiv="Content-Security-Policy" content="script-src 'self' 'sha256-In6B8teKZQll5heMl9bS7CESTbGvuAt3VVV86BUQBDk='"/>
    <title><%= lang('app.title') %></title>
    <script src="./assets/js/scripts/uicore.js"></script>
    <script src="./assets/js/scripts/uibinder.js"></script>
    <link type="text/css" rel="stylesheet" href="./assets/css/launcher.css">
    <style>
        body {
            /*background: url('assets/images/backgrounds/<%=bkid%>.jpg') no-repeat center center fixed;*/
            transition: background-image 1s ease;
            background-image: url('data:image/jpeg;base64,');
            background-size: cover;
            -webkit-user-select: none;
        }
        #main {
            display: none;
            height: calc(100% - 22px);
            background: linear-gradient(to top, rgba(0, 0, 0, 0.75) 0%, rgba(0, 0, 0, 0) 100%);
            width: 100%;
            position: absolute;
            z-index: 10;
        }
        #main[overlay] {
            filter: blur(3px) contrast(0.9) brightness(1.0);
        }
    </style>
</head>
<body bkid="<%=bkid%>">
    <%- include('frame') %>
    <div id="main">
        <%- include('welcome') %>
        <%- include('login') %>
        <%- include('waiting') %>
        <%- include('loginOptions') %>
        <%- include('settings') %>
        <%- include('landing') %>
    </div>
    <%- include('overlay') %>
    <div id="loadingContainer">
        <div id="loadingContent">
            <div id="loadSpinnerContainer">
                <img id="loadCenterImage" src="assets/images/LoadingSeal.png">
                <div id="spinningSphere"></div>
                <style>
                    #spinningSphere, #spinningSphere2, #spinningSphere3 {
                        width: 10px;
                        height: 10px;
                        background-color: white;
                        border-radius: 60%;
                        position: absolute;
                        top: 50%;
                        left: 50%;
                        margin-top: 0px; /* half of the height */
                        margin-left: 0px; /* half of the width */
                        animation: spinAround 2s linear infinite;
                        box-shadow: 0 0 20px rgba(255, 255, 255, 0.7);
                    }

                    #spinningSphere2 {
                        animation: spinAround2 2s linear infinite;
                    }

                    #spinningSphere3 {
                        animation: spinAround3 2s linear infinite;
                    }

                    @keyframes spinAround {
                        0% {
                            transform: rotate(0deg) translateX(150px) rotate(0deg);
                            box-shadow: 0 0 20px rgba(255, 255, 255, 0.7);
                            opacity: 1;
                        }
                        100% {
                            transform: rotate(360deg) translateX(150px) rotate(-360deg);
                            box-shadow: 0 0 20px rgba(255, 255, 255, 0.7);
                            opacity: 1;
                        }
                    }

                    @keyframes spinAround2 {
                        0% {
                            transform: rotate(120deg) translateX(150px) rotate(-120deg);
                            box-shadow: 0 0 20px rgba(255, 255, 255, 0.7);
                            opacity: 1;
                        }
                        100% {
                            transform: rotate(480deg) translateX(150px) rotate(-480deg);
                            box-shadow: 0 0 20px rgba(255, 255, 255, 0.7);
                            opacity: 1;
                        }
                    }

                    @keyframes spinAround3 {
                        0% {
                            transform: rotate(240deg) translateX(150px) rotate(-240deg);
                            box-shadow: 0 0 20px rgba(255, 255, 255, 0.7);
                            opacity: 1;
                        }
                        100% {
                            transform: rotate(600deg) translateX(150px) rotate(-600deg);
                            box-shadow: 0 0 20px rgba(255, 255, 255, 0.7);
                            opacity: 1;
                        }
                    }
                </style>
                <div id="spinningSphere"></div>
                <div id="spinningSphere2"></div>
                <div id="spinningSphere3"></div>
            </div>
        </div>
    </div>
</body>
</html>